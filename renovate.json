{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "labels": ["dependencies"],
  "rangeStrategy": "replace",
  "constraints": {
    "pnpm": "^5.0.0"
  },
  "packageRules": [
    {
      "matchFileNames": ["apps/server/**"],
      "groupName": "server",
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "matchFileNames": ["apps/ui/**"],
      "groupName": "ui",
      "matchUpdateTypes": ["minor", "patch"]
    }
  ]
}
